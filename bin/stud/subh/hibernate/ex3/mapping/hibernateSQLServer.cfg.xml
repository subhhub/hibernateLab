<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
	<property name="connection.driver_class">com.microsoft.jdbc.sqlserver.SQLServerDriver</property>
	<!--<property name="connection.url">jdbc:microsoft:sqlserver://127.0.0.1\SQLEXPRESS;DatabaseName=sanjaydb</property>-->
	<property name="connection.url">jdbc:microsoft:sqlserver://127.0.0.1:1433;DatabaseName=sanjaydb</property>
	<property name="connection.username">subh</property>
	<property name="connection.password">cs</property>
	<property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
	<property name="show_sql">true</property>		<!-- It show the hibernate generated sql statement -->
	<mapping resource="stud/subh/hibernate/ex3/mapping/Account.hbm.xml"/>
</session-factory>
</hibernate-configuration>